generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String                 @id @default(uuid())
  userId    String
  fullName  String
  email     String?
  status    ClientStatus           @default(active)
  payments  Payment[]
  summaries ClientMonthlySummary[]
  createdAt DateTime               @default(now())

  @@index([userId, status])
}

enum ClientStatus {
  active
  paused
  inactive
}

model Payment {
  id        String          @id @default(uuid())
  userId    String
  clientId  String
  amount    Decimal         @db.Decimal(12, 2)
  currency  String          @default("USD")
  category  PaymentCategory @default(session)
  note      String?
  paidAt    DateTime
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([userId, paidAt])
  @@index([clientId, paidAt])
  @@index([userId, clientId, paidAt])
}

enum PaymentCategory {
  session
  package
  subscription
  other
}

model ClientMonthlySummary {
  id          String   @id @default(uuid())
  userId      String
  clientId    String
  year        Int
  month       Int
  totalAmount Decimal  @db.Decimal(12, 2)
  currency    String   @default("USD")
  finalizedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([userId, clientId, year, month])
  @@index([userId, year, month])
  @@index([clientId, year, month])
}
